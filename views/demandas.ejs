<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <link rel="shortcut icon" href="/img/logo_icone.svg" type="image/png">
        <title>Mídia Ideal - Gerenciador de Demandas</title>
        <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/node_modules/bootstrap-icons/font/bootstrap-icons.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="/css/dashboard.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    </head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="#">
                <img src="/img/logoMidiaBrancaSimbolo.png" alt="Logo" width="30" height="30" class="d-inline-block align-top">
            </a>

            <!-- Botão hamburguer para dispositivos móveis -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu central -->
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Demandas</a>
                    </li>
                    <!-- Adicione mais itens de menu conforme necessário -->
                </ul>
            </div>

            <!-- Nome do usuário e opção de sair -->
            <div class="navbar-text">
                <span class="me-2">Nome do Usuário</span>
                <a href="#" class="btn btn-outline-light">Sair</a>
            </div>
        </div>
    </nav>

    <!-- Seu conteúdo da dashboard aqui -->
    <div class="container mt-5">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Digite o número para pesquisar" aria-label="Pesquisar"
                aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Pesquisar</button>
        </div>


        <!-- Tabela -->
        <table class="table">
            <thead>
                <% if(demandas.length > 0) { %>
                <tr>
                    <th scope="col">Número Solicitação</th>
                    <th scope="col">Empresa</th>
                    <th scope="col">Data Abertura</th>
                    <th scope="col">Status</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                    <% demandas.forEach(function(demanda) { %>
                        <tr>
                            <th scope="row"><%= demanda.numeroSolicitacao %></th>
                            <td><%= demanda.qualEmpresa %></td>
                            <td><%= demanda.dataAbertura.toLocaleString('pt-BR', { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                            <td class="status-cell"><%= demanda.ultimoStatus %></td>
                            <td>
                                <button class="btn btn-primary editar-status-button" data-numeroSolicitacao="<%= demanda.numeroSolicitacao %>">Editar Status</button>
                                <a href="/demanda/<%= demanda.numeroSolicitacao %>" target="_blank"><button class="btn btn-primary">Detalhes</button></a>
                            </td>
                        </tr>
                   <% }); %>
                <% } else { %>
                    <p> Sem demandas no sistema </P>
                <% } %>
            </tbody>
        </table>
    </div>
    <!-- Definição do modal -->
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Editar Status - Solicitação Nº <span id="numeroSolicitacaoTitulo"></span></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="numeroSolicitacaoInput">
                <label for="statusSelect">Selecione o novo status:</label>
                <select id="statusSelect" class="form-select">
                    <option value="ENVIADA">ENVIADA</option>
                    <option value="RECUSADA">RECUSADA</option>
                    <option value="RECEBIDA">RECEBIDA</option>
                    <option value="PRODUCAO">PRODUÇÃO</option>
                    <option value="APROVAÇÃO">APROVAÇÃO</option>
                    <option value="APROVADA">APROVADA</option>
                    <option value="ENTREGUE">ENTREGUE</option>
                    <!-- Adicione outras opções de status conforme necessário -->
                </select>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            <button type="button" class="btn btn-primary" onclick="salvarNovoStatus()">Salvar</button>
            </div>
        </div>
        </div>
    </div>

</body>
<script src="/js/demandas.js"></script>
</html>